// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Slime {
  id              String     @id @map("_id")
  name            String
  image           String
  diet            DietEnum
  favouriteToy    Toy[]
  favouriteToyId  String?
  favouriteFood   Food[]
  favouriteFoodId String?
  type            SlimeEnum
  slimepedia      Slimepedia
  locations       Location[] @relation(fields: [locationIds], references: [id])
  locationIds     String[]
  properties      String[]
  games           Int[]
}

model Food {
  id          String     @id @map("_id")
  name        String
  image       String
  type        DietEnum
  slime       Slime?     @relation(fields: [slimeId], references: [id])
  slimeId     String?
  locations   Location[]
  locationIds String[]
  slimepedia  Slimepedia
}

model Location {
  id         String     @id @map("_id")
  name       String
  image      String
  slimepedia Slimepedia
  slimes     Slime[]    @relation(fields: [slimeIds], references: [id])
  slimeIds   String[]
  food       Food?      @relation(fields: [foodId], references: [id])
  foodId     String?
  games      Int[]
}

model Toy {
  id      String  @id @map("_id")
  name    String
  image   String
  slime   Slime?  @relation(fields: [slimeId], references: [id])
  slimeId String? @unique
}

type Slimepedia {
  about        String?
  ranch        String?
  slimeology   String?
  risks        String?
  plortonomics String?
}

enum SlimeEnum {
  docile
  harmful
  special
  hostile
}

enum DietEnum {
  veggie
  fruit
  meat
  water
  ash
  nectar
  all
  other
}
